<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body
    style="
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    "
  >
    <form
      action="/editProfile"
      style="display: flex; flex-direction: column"
      method="post"
    >
      <% rows.forEach(user => { %>
      <label
        >Username
        <input
          spellcheck="false"
          min="3"
          class="form-control mt-2"
          required
          type="text"
          name="username"
          value="<%= user.username %>"
        />
      </label>
      <label
        >Email
        <input
          spellcheck="false"
          min="3"
          class="form-control mt-2"
          required
          type="text"
          name="email"
          value="<%= user.email %>"
        />
      </label>
      <label
        >Password
        <input
          spellcheck="false"
          min="3"
          class="form-control mt-2"
          required
          type="text"
          name="password"
          value="<%= user.password %>"
        />
      </label>
      <div class="d-flex align-items-center justify-content-between">
        <button class="btn ml-2 btn-primary mt-2" type="submit">
          Update
        </button>
        <a class="btn ml-2 btn-warning mt-2" href="/login">Cancel</a>
      </div>
      <form action=""></form>
      <%}); %>
    </form>

    <script src="/js/app.js"></script>
  </body>
</html>
